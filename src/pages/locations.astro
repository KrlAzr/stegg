---
// src/pages/locations.astro
import Layout from '../layouts/Layout.astro';
import { LOCATIONS } from '../data/locations';
import { SERVICES } from '../data/services';

const pageTitle = "Service Locations | Stegg Digital";
const pageDesc = "We provide hyper-local digital growth engines across key economic hubs in Malaysia. Browse our coverage areas.";
---

<Layout title={pageTitle} description={pageDesc}>
  
  <section class="pt-32 pb-12 bg-slate-900 text-center">
    <div class="max-w-4xl mx-auto px-4">
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-6">
            Our Coverage Areas
        </h1>
        <p class="text-slate-400 text-lg max-w-2xl mx-auto">
            Stegg Digital operates across high-value commercial zones in Malaysia. Select your area to view specific growth strategies.
        </p>
    </div>
  </section>

  <section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {LOCATIONS.map((loc) => (
          <div class="bg-white rounded-xl border border-slate-200 shadow-sm hover:shadow-md transition-all overflow-hidden group">
            
            <div class="bg-slate-50 p-4 border-b border-slate-100 flex justify-between items-center group-hover:bg-blue-50 transition-colors">
                <h2 class="text-lg font-bold text-slate-900 flex items-center gap-2">
                    <i data-lucide="map-pin" class="w-4 h-4 text-blue-600"></i>
                    {loc.name}
                </h2>
                <span class="text-xs font-bold bg-white border border-slate-200 px-2 py-1 rounded text-slate-500">
                    {SERVICES.length} Services
                </span>
            </div>

            <div class="p-6 h-64 overflow-y-auto scrollbar-thin scrollbar-thumb-slate-200 scrollbar-track-transparent">
                <ul class="space-y-3">
                  {SERVICES.map((serv) => (
                    <li>
                      <a 
                        href={`/${serv.slug}-in-${loc.slug}/`} 
                        class="text-xs text-slate-500 hover:text-blue-600 hover:underline decoration-blue-600 underline-offset-2 transition-colors flex items-start gap-2"
                      >
                        <span class="mt-1 w-1 h-1 rounded-full bg-slate-300 group-hover:bg-blue-400"></span>
                        {serv.name}
                      </a>
                    </li>
                  ))}
                </ul>
            </div>

          </div>
        ))}
      </div>

    </div>
  </section>

  <section class="py-20 bg-white border-t border-slate-100 text-center">
    <h2 class="text-2xl font-bold text-slate-900 mb-6">Don't see your area?</h2>
    <a href="/#contact" class="text-blue-600 font-bold hover:underline">Contact us for custom territory expansion â†’</a>
  </section>

</Layout>