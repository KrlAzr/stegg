---
// src/pages/demos/[slug].astro
import { DEMOS } from '../../data/demos';

export async function getStaticPaths() {
  return DEMOS.map((demo) => ({
    params: { slug: demo.slug },
    props: { demo },
  }));
}

const { demo } = Astro.props;

// --- PREMIUM THEME ENGINE ---
// Maps niche colors to a sophisticated palette
const colors = {
    rose: { 
        primary: 'bg-rose-600', hover: 'hover:bg-rose-700', text: 'text-rose-600', 
        light: 'bg-rose-50', border: 'border-rose-200', ring: 'ring-rose-500',
        gradient: 'from-rose-50 to-white'
    },
    blue: { 
        primary: 'bg-blue-600', hover: 'hover:bg-blue-700', text: 'text-blue-600', 
        light: 'bg-blue-50', border: 'border-blue-200', ring: 'ring-blue-500',
        gradient: 'from-blue-50 to-white'
    },
    slate: { 
        primary: 'bg-slate-900', hover: 'hover:bg-slate-800', text: 'text-slate-900', 
        light: 'bg-slate-100', border: 'border-slate-200', ring: 'ring-slate-500',
        gradient: 'from-slate-100 to-white'
    },
    orange: { 
        primary: 'bg-orange-600', hover: 'hover:bg-orange-700', text: 'text-orange-600', 
        light: 'bg-orange-50', border: 'border-orange-200', ring: 'ring-orange-500',
        gradient: 'from-orange-50 to-white'
    },
    indigo: { 
        primary: 'bg-indigo-600', hover: 'hover:bg-indigo-700', text: 'text-indigo-600', 
        light: 'bg-indigo-50', border: 'border-indigo-200', ring: 'ring-indigo-500',
        gradient: 'from-indigo-50 to-white'
    },
};

const theme = colors[demo.color] || colors.blue;
---

<html lang="en" class="scroll-smooth">
<head>
    <title>{demo.title} - High Performance Asset</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body class="font-['Plus_Jakarta_Sans'] text-slate-600 antialiased bg-white selection:bg-slate-900 selection:text-white">

    <nav class="fixed w-full z-50 top-0 border-b border-white/10 bg-white/80 backdrop-blur-xl supports-[backdrop-filter]:bg-white/60">
        <div class="max-w-7xl mx-auto px-4 h-20 flex items-center justify-between">
            
            <div class="flex items-center gap-2 group cursor-pointer">
                <div class={`w-10 h-10 rounded-xl ${theme.primary} flex items-center justify-center text-white shadow-lg shadow-slate-900/10 group-hover:scale-105 transition-transform`}>
                    <span class="font-bold text-lg">{demo.title.charAt(0)}</span>
                </div>
                <span class="font-bold text-xl text-slate-900 tracking-tight">{demo.title}</span>
            </div>

            <div class="flex items-center gap-6">
                <a href="/projects" class="hidden sm:flex items-center gap-2 text-sm font-semibold text-slate-500 hover:text-slate-900 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
                    Back to Portfolio
                </a>
                <a href="#contact" class={`px-6 py-2.5 text-white text-sm font-bold rounded-full ${theme.primary} ${theme.hover} shadow-lg shadow-blue-900/10 hover:shadow-xl hover:-translate-y-0.5 transition-all`}>
                    Book Consultation
                </a>
            </div>
        </div>
    </nav>

    <section class={`relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden bg-gradient-to-b ${theme.gradient}`}>
        <div class="absolute top-0 right-0 w-1/3 h-full bg-slate-100/50 skew-x-12 transform origin-top pointer-events-none"></div>
        
        <div class="max-w-7xl mx-auto px-4 grid lg:grid-cols-12 gap-12 items-center relative z-10">
            
            <div class="lg:col-span-7">
                <div class={`inline-flex items-center gap-2 px-3 py-1 rounded-full text-xs font-bold mb-8 bg-white border border-slate-200 shadow-sm ${theme.text}`}>
                    <span class="relative flex h-2 w-2">
                      <span class={`animate-ping absolute inline-flex h-full w-full rounded-full opacity-75 ${theme.primary}`}></span>
                      <span class={`relative inline-flex rounded-full h-2 w-2 ${theme.primary}`}></span>
                    </span>
                    #1 Rated {demo.niche} in the Region
                </div>
                
                <h1 class="text-5xl md:text-7xl font-extrabold text-slate-900 leading-[1.1] mb-6 tracking-tight">
                    {demo.headline}
                </h1>
                
                <p class="text-xl text-slate-600 mb-10 leading-relaxed max-w-lg">
                    {demo.subheadline}
                </p>
                
                <div class="flex flex-col sm:flex-row gap-4">
                    <button class={`px-8 py-4 text-white font-bold rounded-2xl shadow-xl shadow-slate-900/10 hover:shadow-2xl hover:-translate-y-1 transition-all ${theme.primary} ${theme.hover}`}>
                        Book Appointment
                    </button>
                    <button class="px-8 py-4 bg-white text-slate-900 font-bold rounded-2xl border border-slate-200 hover:border-slate-300 hover:bg-slate-50 transition-all shadow-sm">
                        View Services
                    </button>
                </div>

                <div class="mt-12 flex items-center gap-6 text-sm font-medium text-slate-500">
                    <div class="flex items-center gap-2">
                        <svg class="text-green-500 w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                        <span>Verified Professionals</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="text-green-500 w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                        <span>Instant Booking</span>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-5 relative group">
                <div class={`absolute inset-0 rounded-[2.5rem] rotate-6 opacity-20 transform scale-95 ${theme.primary} blur-3xl`}></div>
                <img src={demo.image} class="relative rounded-[2.5rem] shadow-2xl rotate-2 group-hover:rotate-0 transition-all duration-700 object-cover aspect-[4/5] w-full border-8 border-white" />
                
                <div class="absolute bottom-8 -left-8 bg-white p-5 rounded-2xl shadow-xl border border-slate-100 flex items-center gap-4 animate-bounce duration-[3000ms]">
                    <div class="flex -space-x-3">
                        <div class="w-10 h-10 rounded-full border-2 border-white bg-slate-200"></div>
                        <div class="w-10 h-10 rounded-full border-2 border-white bg-slate-300"></div>
                        <div class="w-10 h-10 rounded-full border-2 border-white bg-slate-400"></div>
                    </div>
                    <div>
                        <div class="flex text-yellow-400 text-xs">★★★★★</div>
                        <span class="font-bold text-slate-900 text-sm">500+ Reviews</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-slate-900 text-white py-12 border-y border-slate-800">
        <div class="max-w-7xl mx-auto px-4 grid grid-cols-2 md:grid-cols-3 gap-8 text-center divide-x divide-white/10">
            {demo.stats?.map((stat) => (
                <div class="px-4">
                    <div class="text-4xl md:text-5xl font-extrabold mb-2 tracking-tight text-white">{stat.value}</div>
                    <div class="text-xs font-bold text-slate-400 uppercase tracking-widest">{stat.label}</div>
                </div>
            ))}
        </div>
    </section>

    <section class="py-24 bg-white relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 grid md:grid-cols-2 gap-16 items-center">
            <div class="relative order-2 md:order-1">
                 <div class={`absolute top-0 left-0 w-64 h-64 ${theme.light} rounded-full mix-blend-multiply filter blur-3xl opacity-70`}></div>
                 <div class="relative bg-slate-50 rounded-3xl p-8 border border-slate-100">
                    <div class="space-y-4">
                        <div class="flex gap-4 items-start p-4 bg-white rounded-xl shadow-sm border border-slate-100">
                            <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center text-red-600 shrink-0">✕</div>
                            <div>
                                <h4 class="font-bold text-slate-900">Generic Solutions</h4>
                                <p class="text-sm text-slate-500">Cookie-cutter plans that don't fit your needs.</p>
                            </div>
                        </div>
                        <div class="flex gap-4 items-start p-4 bg-white rounded-xl shadow-sm border border-slate-100">
                            <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center text-red-600 shrink-0">✕</div>
                            <div>
                                <h4 class="font-bold text-slate-900">Hidden Costs</h4>
                                <p class="text-sm text-slate-500">Surprise fees added at the end of service.</p>
                            </div>
                        </div>
                        <div class="flex gap-4 items-start p-4 bg-white rounded-xl shadow-sm border border-slate-100 opacity-50">
                            <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center text-red-600 shrink-0">✕</div>
                            <div>
                                <h4 class="font-bold text-slate-900">Unresponsive Support</h4>
                                <p class="text-sm text-slate-500">Waiting days for a simple reply.</p>
                            </div>
                        </div>
                    </div>
                 </div>
            </div>
            
            <div class="order-1 md:order-2">
                <h2 class="text-blue-600 font-bold tracking-wide uppercase text-sm mb-3">The Problem</h2>
                <h3 class="text-4xl font-extrabold text-slate-900 mb-6 leading-tight">{demo.problem?.title}</h3>
                <p class="text-lg text-slate-600 leading-relaxed mb-8 border-l-4 border-slate-200 pl-6">
                    {demo.problem?.text}
                </p>
                <div class="flex items-center gap-4">
                    <span class="text-sm font-bold text-slate-400 uppercase tracking-wider">VS</span>
                    <span class={`text-lg font-bold ${theme.text}`}>The {demo.title} Standard</span>
                </div>
            </div>
        </div>
    </section>

    <section class="py-24 bg-slate-50">
        <div class="max-w-7xl mx-auto px-4">
            <div class="text-center max-w-2xl mx-auto mb-16">
                <h2 class="text-3xl md:text-4xl font-extrabold text-slate-900 mb-4">A Process Built on Clarity</h2>
                <p class="text-slate-600 text-lg">We don't rely on guesswork. Every step is calculated for your success.</p>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                {demo.process?.map((step, index) => (
                    <div class="bg-white p-10 rounded-3xl shadow-sm border border-slate-200 relative overflow-hidden group hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                        <div class={`text-8xl font-black opacity-[0.03] absolute -right-4 -top-8 ${theme.text}`}>0{index + 1}</div>
                        
                        <div class={`w-12 h-12 rounded-2xl ${theme.light} ${theme.text} flex items-center justify-center font-bold text-xl mb-6 group-hover:scale-110 transition-transform`}>
                            {index + 1}
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 mb-3 relative z-10">{step.title}</h3>
                        <p class="text-slate-600 leading-relaxed relative z-10">{step.text}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section class="py-24 bg-white">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6">
                <div>
                    <h2 class="text-4xl font-extrabold text-slate-900 mb-2">Client Stories</h2>
                    <p class="text-slate-600">Don't take our word for it. Read what others say.</p>
                </div>
                <div class="flex items-center gap-2">
                    <span class="font-bold text-slate-900 text-xl">4.9</span>
                    <div class="flex text-yellow-400">
                        <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                        <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                        <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                        <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                        <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                    </div>
                    <span class="text-sm text-slate-500 font-medium">(204 Reviews)</span>
                </div>
            </div>

            <div class="grid md:grid-cols-3 gap-6">
                {demo.reviews?.map((review) => (
                    <div class="bg-slate-50 p-8 rounded-3xl border border-slate-100 hover:border-slate-200 transition-colors">
                        <div class="flex text-yellow-400 mb-4 space-x-1">
                            {Array.from({ length: 5 }).map((_, i) => (
                                <svg class={`w-4 h-4 ${i < review.stars ? 'fill-current' : 'text-slate-300'}`} viewBox="0 0 24 24">
                                    <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                                </svg>
                            ))}
                        </div>
                        <p class="text-slate-700 font-medium italic mb-6 leading-relaxed">"{review.text}"</p>
                        <div class="flex items-center gap-3">
                            <div class={`w-10 h-10 rounded-full ${theme.light} flex items-center justify-center font-bold text-sm ${theme.text}`}>
                                {review.name.charAt(0)}
                            </div>
                            <div>
                                <div class="font-bold text-slate-900 text-sm">{review.name}</div>
                                <div class="text-xs text-slate-400">Verified Client</div>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section class="py-24 bg-white border-t border-slate-100">
        <div class="max-w-3xl mx-auto px-4">
            <h2 class="text-3xl font-bold text-slate-900 text-center mb-12">Common Questions</h2>
            <div class="space-y-4">
                {demo.faq?.map((item) => (
                    <details class="group bg-white rounded-2xl border border-slate-200 open:border-slate-300 open:ring-2 open:ring-slate-100 transition-all duration-300">
                        <summary class="flex justify-between items-center font-bold cursor-pointer list-none p-6 text-slate-900 text-lg select-none">
                            <span>{item.q}</span>
                            <span class="transition-transform duration-300 group-open:rotate-180 text-slate-400">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
                            </span>
                        </summary>
                        <div class="px-6 pb-6 text-slate-600 leading-relaxed text-base">
                            {item.a}
                        </div>
                    </details>
                ))}
            </div>
        </div>
    </section>

    <section id="contact" class="py-24 relative overflow-hidden">
        <div class={`absolute inset-0 ${theme.primary}`}></div>
        <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 brightness-100 contrast-150"></div>
        
        <div class="max-w-4xl mx-auto px-4 text-center relative z-10">
            <h2 class="text-4xl md:text-6xl font-extrabold text-white mb-8 tracking-tight">
                Ready to transform your outcome?
            </h2>
            <p class="text-blue-100 text-xl mb-12 max-w-2xl mx-auto">
                Limited slots available for this month. Secure your consultation today with {demo.title}.
            </p>
            
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                <button class="bg-white text-slate-900 px-12 py-5 rounded-2xl font-bold text-lg shadow-2xl hover:bg-slate-50 transition-colors hover:-translate-y-1 transform duration-200 w-full sm:w-auto">
                    Book My Appointment
                </button>
                <button class="px-12 py-5 rounded-2xl font-bold text-lg text-white border-2 border-white/20 hover:bg-white/10 transition-colors w-full sm:w-auto">
                    Contact Support
                </button>
            </div>
            
            <p class="mt-8 text-sm text-blue-200/60">
                <span class="inline-flex items-center gap-1">
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                    Secure Booking. No payment required today.
                </span>
            </p>
        </div>
    </section>

    <footer class="bg-slate-950 py-12 text-center border-t border-slate-900">
        <div class="flex items-center justify-center gap-2 mb-4 opacity-50">
            <span class="font-bold text-xl text-white tracking-tight">{demo.title}</span>
        </div>
        <p class="text-slate-500 text-sm">
            &copy; 2026 {demo.title}. Powered by <span class="text-white">Stegg Signal Engine</span>.
        </p>
    </footer>

</body>
</html>