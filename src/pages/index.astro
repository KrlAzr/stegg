---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import VisualProof from '../components/VisualProof.astro';
import SignalStack from '../components/SignalStack.astro';
import StrategicDeepDive from '../components/StrategicDeepDive.astro';
// REMOVED: import RealityCheck from '../components/RealityCheck.astro'; 
import Pricing from '../components/Pricing.astro';
import FAQ from '../components/FAQ.astro';
import AboutBuilder from '../components/AboutBuilder.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

// UPDATED METADATA:
// 1. Title: Hits "Web Design" & "Local SEO" - The two main things people search for.
// 2. Desc: Includes "Programmatic SEO", "High-Converting", and "Lead Generation".
const pageTitle = "Stegg | High-Performance Web Design & Local SEO Engine";
const pageDescription = "We build fast, high-ranking websites that dominate local search. Premium web design meets programmatic SEO to capture high-intent leads 24/7.";
---

<Layout title={pageTitle} description={pageDescription}>
    <Navbar />
    
    <main>
        <Hero />
        
        <div id="how-it-works" class="scroll-mt-24">
            <VisualProof />
        </div>

        <div id="engine">
            <SignalStack />
        </div>

        <StrategicDeepDive />
        
        <div id="pricing" class="scroll-mt-24">
            <Pricing />
        </div>

        <div id="faq" class="scroll-mt-24">
            <FAQ />
        </div>

        <AboutBuilder />
        
        <Contact />
    </main>

    <Footer />
</Layout>