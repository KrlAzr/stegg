---
// src/pages/projects.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { DEMOS } from '../data/demos';

const pageTitle = "Lead Engines | Stegg Digital";
const pageDescription = "High-performance landing pages engineered to capture leads and drive bookings.";

// CONFIG: Exclude Retail/E-com niches so this page is PURE Service/Lead Gen
const ecomNiches = [
    'Clothing Brand', 
    'Skincare', 
    'Tech', 
    'Tech Gadgets', 
    'Home Decor', 
    'Indoor Plants'
];

const serviceProjects = DEMOS.filter(p => !ecomNiches.includes(p.niche));
---

<Layout title={pageTitle} description={pageDescription}>
    <Navbar />

    <main>
        <section class="pt-32 pb-16 bg-white text-center border-b border-slate-100">
            <div class="max-w-4xl mx-auto px-4">
                <span class="text-blue-600 font-bold tracking-widest text-xs uppercase mb-4 block">Service Business Portfolio</span>
                <h1 class="text-4xl md:text-6xl font-extrabold mb-6 text-slate-900 tracking-tight">
                    Lead Generation <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500">Engines.</span>
                </h1>
                <p class="text-xl text-slate-600 max-w-2xl mx-auto">
                    We don't build brochures. We build <strong>conversion systems</strong> designed to fill calendars for clinics, contractors, and professionals.
                </p>
            </div>
        </section>

        <section class="py-20 bg-slate-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6">
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {serviceProjects.map((project) => (
                        <a href={`/demos/${project.slug}`} target="_blank" class="group relative bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-500 border border-slate-200 block h-full flex flex-col">
                            
                            <div class="aspect-[4/3] overflow-hidden bg-slate-200 relative">
                                <img 
                                    src={project.image} 
                                    alt={project.title} 
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 opacity-90 group-hover:opacity-100" 
                                />
                                <div class="absolute top-4 right-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold text-slate-900 shadow-sm flex items-center gap-1">
                                    <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                                    Live Site
                                </div>
                            </div>
                            
                            <div class="p-6 flex-1 flex flex-col">
                                <div class="flex justify-between items-start mb-3">
                                    <span class="text-xs font-bold text-blue-600 uppercase tracking-widest">{project.niche}</span>
                                </div>
                                <h3 class="text-xl font-bold text-slate-900 group-hover:text-blue-600 transition-colors mb-2">{project.title}</h3>
                                <p class="text-slate-500 text-sm line-clamp-2 mb-4 flex-1">{project.subheadline}</p>
                                
                                <div class="pt-4 border-t border-slate-100 flex items-center justify-between text-xs font-medium text-slate-400">
                                    <span>Stegg Engine v1.0</span>
                                    <span class="text-green-600 flex items-center gap-1">
                                        99/100 Speed
                                    </span>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>

        <section class="py-20 bg-slate-900 text-white text-center">
            <h2 class="text-2xl font-bold mb-8">Need more leads?</h2>
            <a href="/#contact" class="inline-block bg-white text-slate-900 font-bold px-8 py-4 rounded-xl hover:bg-blue-50 transition-colors">
                Book Appointment
            </a>
        </section>
    </main>

    <Footer />
</Layout>