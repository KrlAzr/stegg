---
// src/pages/work.astro
import Layout from '../layouts/Layout.astro';

const pageTitle = "Selected Work | Stegg Digital";
const pageDescription = "Premium digital assets engineered for speed, authority, and conversion.";

// PLACEHOLDER DATA (Replace with your actual screenshots later)
const projects = [
    {
        title: "HealthMetrics Signal System",
        category: "Corporate Asset",
        stat: "98/100 Speed Score",
        image: "https://placehold.co/800x600/1e293b/FFF?text=HealthMetrics+Asset" // Replace with real image
    },
    {
        title: "Ocha Healthcare",
        category: "Local Service Engine",
        stat: "+40% Lead Gen",
        image: "https://placehold.co/800x600/1e293b/FFF?text=Ocha+Healthcare" // Replace with real image
    }
];
---

<Layout title={pageTitle} description={pageDescription}>
    
    <section class="pt-32 pb-16 bg-white text-center border-b border-slate-100">
        <div class="max-w-4xl mx-auto px-4">
            <h1 class="text-4xl md:text-6xl font-extrabold mb-6 text-slate-900 tracking-tight">
                Visual <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500">Proof.</span>
            </h1>
            <p class="text-xl text-slate-600 max-w-2xl mx-auto">
                We don't build generic websites. We build <strong>Performance Assets</strong> designed to dominate their specific market.
            </p>
        </div>
    </section>

    <section class="py-20 bg-slate-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6">
            <div class="grid md:grid-cols-2 gap-10">
                
                {projects.map((project) => (
                    <div class="group relative bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-500 border border-slate-200">
                        <div class="aspect-video overflow-hidden bg-slate-200">
                            <img src={project.image} alt={project.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" />
                        </div>
                        
                        <div class="p-8">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <span class="text-xs font-bold text-blue-600 uppercase tracking-widest mb-1 block">{project.category}</span>
                                    <h3 class="text-2xl font-bold text-slate-900">{project.title}</h3>
                                </div>
                                <div class="bg-green-100 text-green-700 text-xs font-bold px-3 py-1 rounded-full border border-green-200">
                                    {project.stat}
                                </div>
                            </div>
                        </div>
                    </div>
                ))}

            </div>
        </div>
    </section>

    <section class="py-20 bg-slate-900 text-white text-center">
        <h2 class="text-2xl font-bold mb-8">Your brand deserves to look this good.</h2>
        <a href="/pricing" class="inline-block bg-white text-slate-900 font-bold px-8 py-4 rounded-xl hover:bg-blue-50 transition-colors">
            View Pricing Options
        </a>
    </section>

</Layout>